<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <![CDATA[
    Manifest for building NDK Vulkan validation layer binaries from master.

    Uses prebuilt python.

    To build this project, run extenal/vulkan-validation-layers/build-android//build.py --installdir $DIST_DIR.

    Then executables are in:
          $DIST_DIR/vulkan-validation-layers/

   For testing, use:
           fetch="https://android.googlesource.com/"
  ]]>


  <remote  name="aosp"
           fetch=".."
           review="https://android-review.googlesource.com/" />
  <default revision="master"
           remote="aosp"
           sync-j="4" />

  <project path="external/shaderc/glslang" name="platform/external/shaderc/glslang" groups="presubmit" />
  <project path="external/shaderc/shaderc" name="platform/external/shaderc/shaderc" groups="presubmit" />
  <project path="external/shaderc/spirv-tools" name="platform/external/shaderc/spirv-tools" groups="presubmit" />
  <project path="external/vulkan-validation-layers" name="platform/external/vulkan-validation-layers" groups="presubmit" />
